<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sistema2Activity"
    android:layout_gravity="center_horizontal">

    <EditText
        android:id="@+id/edtS2x1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/edt_layout"
        android:ems="10"
        android:gravity="center"
        android:hint="x"
        android:inputType="number|textPersonName|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bracket" />

    <EditText
        android:id="@+id/edtS2y1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/edt_layout"
        android:ems="10"
        android:gravity="center"
        android:hint="y"
        android:inputType="number|textPersonName|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/edtS2x1"
        app:layout_constraintStart_toEndOf="@+id/edtS2x1"
        app:layout_constraintTop_toTopOf="@+id/edtS2x1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtS2y1"
        app:layout_constraintStart_toEndOf="@+id/edtS2y1"
        app:layout_constraintTop_toTopOf="@+id/edtS2y1"
        app:srcCompat="@drawable/equal" />

    <EditText
        android:id="@+id/edtS2inde"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/edt_layout"
        android:ems="10"
        android:gravity="center"
        android:inputType="number|textPersonName|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <EditText
        android:id="@+id/edtS2x2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edt_layout"
        android:ems="10"
        android:gravity="center"
        android:hint="x"
        android:inputType="number|textPersonName|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/edtS2x1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtS2y2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/edt_layout"
        android:ems="10"
        android:gravity="center"
        android:hint="y"
        android:inputType="number|textPersonName|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/edtS2x2"
        app:layout_constraintStart_toEndOf="@+id/edtS2x2"
        app:layout_constraintTop_toTopOf="@+id/edtS2x2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtS2y2"
        app:layout_constraintStart_toEndOf="@+id/edtS2y2"
        app:layout_constraintTop_toTopOf="@+id/edtS2y2"
        app:srcCompat="@drawable/equal" />

    <EditText
        android:id="@+id/edtS2inde2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/edt_layout"
        android:ems="10"
        android:gravity="center"
        android:inputType="number|textPersonName|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonCalcS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttons_layout"
        android:text="@string/calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvResulS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado: "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLimpaSis2" />

    <Button
        android:id="@+id/buttonLimpaSis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttons_layout"
        android:text="@string/limp"
        app:layout_constraintEnd_toEndOf="@+id/buttonCalcS2"
        app:layout_constraintStart_toStartOf="@+id/buttonCalcS2"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalcS2" />
</androidx.constraintlayout.widget.ConstraintLayout>